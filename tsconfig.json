{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": ["./lib/**/*.ts"]
}
